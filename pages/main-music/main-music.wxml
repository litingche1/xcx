<!--pages/main-music/main-music.wxml-->
<!-- 1.Vant搜索框 -->
<van-search
  value="{{ value }}"
  shape="round"
  background="#fafafa"
  placeholder="请输入搜索关键词"
  bind:click-input="onSearchClick"
/>
<!-- 2.轮播图的展示 -->
<swiper class="banner" circular indicator-dots style="height: {{bannerHeight}}px;" wx:if="{{banners.length}}">
  <block wx:for="{{banners}}" wx:key="encodeId">
    <swiper-item>
      <image class="banner-image" src="{{item.imageUrl}}" mode="widthFix" bindload="onBannerImageLoad"></image>
    </swiper-item>
  </block>
</swiper>
<!-- 3.推荐歌曲的展示 -->
<view class="recommend" wx:if="{{recommendSongs.length}}">
  <area-header title="推荐歌曲" bind:moreclick="onRecommendMoreClick"/>
  <block wx:for="{{recommendSongs}}" wx:key="id">
    <song-item-v1 itemData="{{item}}"/>
  </block>
</view>
<menu-area title="热门歌单" musicList="{{hotMenuList}}"/>
<menu-area title="推荐歌单" musicList="{{recMenuList}}"/>
